        <label class="col-sm-2 control-label">@Localizer["Caption"]</label>
        <div class="col-sm-10">
            <input class="form-control" id="caption" name="caption" placeholder="@Localizer["Caption"]">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Category"]</label>
        <div class="col-sm-10">
            <input class="form-control" id="category" name="category" placeholder="@Localizer["Category"]">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Description"]</label>
        <div class="col-sm-10">
            <input class="form-control" id="description" name="description" placeholder="@Localizer["Description"]">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Ingredients"]</label>
        <div class="col-sm-10">
            <input class="form-control" id="ingridients" name="ingridients" placeholder="@Localizer["Ingredients"]">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Text"]</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="12" id="editor" name="text" placeholder="@Localizer["Text"]"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">ImageURL</label>
        <div class="col-sm-10">
            <input class="form-control" id="imageurl" name="imageurl" placeholder="ImageURL">
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-2">
            <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
        </div>
    </div>
</form>
