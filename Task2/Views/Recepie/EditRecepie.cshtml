@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer

<h2>@Localizer["Head"]</h2>

@model Task2.Models.Recepie
@{
    ViewData["Title"] = "EditRecepie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    input[type="radio"] {
        display: none;
    }

    .form-group {
        margin-top: 2%;
    }
</style>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.39/jodit.min.js"></script>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Caption"]</label>
        <div class="col-sm-3">
            <input class="form-control" id="caption" name="caption" value="@Model.Caption">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Category"]</label>
        <div class="col-sm-8">
            <input class="form-control" id="category" name="category" value="@Model.Category">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Description"]</label>
        <div class="col-sm-8">
            <input class="form-control" id="description" name="description" value="@Model.Description">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Ingredients"]</label>
        <div class="col-sm-8">
            <input class="form-control" id="ingridients" name="ingridients" value="@Model.Ingridients">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">@Localizer["Text"]</label>
        <div class="col-sm-8">
            <textarea class="form-control" rows="8" id="editor" name="text">@Model.Text</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ImageURL</label>
        <div class="col-sm-3">
            <input class="form-control" id="imageurl" name="imageurl" value="@Model.ImageURL">
        </div>
    </div>
    <div class="form-group">
        <div class=" col-sm-offset-2">
            <button type="submit" class="btn btn-primary" asp-action="ApplyRecepieEditing" asp-route-id="@Model.Id">@Localizer["Edit"]</button>
        </div>
    </div>
</form>
<script>
    var editor = new Jodit("#editor", {
    });

</script>